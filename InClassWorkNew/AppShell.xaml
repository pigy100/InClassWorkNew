<?xml version="1.0" encoding="UTF-8" ?>
<Shell
x:Class="InClassWorkNew.AppShell"
xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
xmlns:local="clr-namespace:InClassWorkNew.Views"
Title="InClassWorkNew">

    <TabBar>
        <ShellContent
            Icon="home.png"
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPageView}"
            Route="MainPage" />

        <ShellContent
            Icon="admin.png"
            Title="AdminPage"
            IsVisible="{Binding IsAdminVisible}"
            ContentTemplate="{DataTemplate local:AdminPageView}"
            Route="AdminPage" />

        <ShellContent
            Icon="clear_day.png"
            Title="Account"
            ContentTemplate="{DataTemplate local:AccountPageView}"
            Route="AccountPage" />

        <ShellContent
            Icon="garden.png"
            Title="Sign out"
            ContentTemplate="{DataTemplate local:SignOutView}"
            Route="SignOutPage" />
    </TabBar>

</Shell>
